<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.woosoyeon.refrige.MenuActivity">

    <Button
        android:id="@+id/load_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_weight="1"
        android:text="불러오기"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:text="삭제"
        android:onClick="onClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/load_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.26" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/save_btn"
        android:text="저장"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/delete_btn"
        android:layout_marginLeft="39dp" />
    <EditText
        android:layout_width="372dp"
        android:layout_height="291dp"
        android:id="@+id/memo_edit"
        android:hint="메모할 내용을 입력하세요"
        android:background="@android:drawable/edit_text"
        tools:layout_editor_absoluteY="123dp"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBackButtonClicked"
        android:text="돌아가기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintVertical_bias="0.965" />

    
</android.support.constraint.ConstraintLayout>